@model IQueryable<ToDoWebApp.Models.ToDo>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Azure ToDo app</h1>
    <p class="lead">Demonstrating: .NET Web App, SQL, DocumentDB, ServiceBus, Function Apps, Application Insights</p>
    
</div>

<div class="row">
    <div class="col-md-8">
        <h2>List of ToDoes</h2>
        <p>
            <table class="table table-hover table-bordered">
                <thead>
                    <td>GId</td>
                    <td>Category</td>
                    <td>Note</td>
                    <td>Created</td>
                </thead>

                @foreach(var x in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(x.GId.ToString(), "Detail", new { controller = "Home", id = x.Id })</td>
                        <td>@x.Category</td>
                        <td>@x.Note</td>
                        <td>@x.Created</td>
                    </tr>
                }

            </table>
        </p>
    </div>
    <div class="col-md-4">
        <h2>ToDo</h2>
        <p>ToDo application demonstrating Azure technologies like Azure SQL Database, DocumentDB, Service Bus, Function App and Application Insights running on Azure Web App.</p>
        <p>@Html.ActionLink("Create ToDo", "Detail",
          new { controller = "Home", id = 0 },
          new { @class = "btn btn-primary" })</p>
    </div>
</div>